<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="example.dao.TokenSettingDao" >
    <resultMap id="TokenSettingResultMap" type="TokenSetting" >
        <id column="id" property="id"/>
        <result column="client_id" property="clientId" />
        <result column="name" property="name" />
        <result column="value" property="value" />
        <result property="createdAt" column="created_at"/>
    </resultMap>
    <sql id="Base_Column_List" >
        client_id, name,value,created_at
    </sql>
    <sql id="table">token_setting</sql>
    

    <select id="getByClientId" resultMap="TokenSettingResultMap" parameterType="java.lang.String" >
        SELECT
        <include refid="Base_Column_List" />
        FROM <include refid="table"/>
        where client_id = #{clientId}
    </select>
    <insert id="insert" parameterType="TokenSetting" useGeneratedKeys="true" keyProperty="id">
    	insert into  <include refid="table"/>
    	(<include refid="Base_Column_List" />)
    	values(#{clientId},#{name},#{value}, now())
    </insert>
    <update id="update" parameterType="TokenSetting">
    	update <include refid="table"/>
    	set name = #{name},
    	value = #{value}
    	where id = #{id}
    </update>
   
    <delete id="delete" parameterType="java.lang.Long">
    	delete from <include refid="table"/>
    	where id = #{id}
    </delete>  
</mapper>